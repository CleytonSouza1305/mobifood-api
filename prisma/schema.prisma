generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int              @id @default(autoincrement())
  username       String           @db.VarChar(255)
  email          String           @unique @db.VarChar(255)
  password       String
  phone          String?          @db.VarChar(20)
  role           UserRole         @default(user)
  favoriteTheme FavoriteTheme @default(light)
  address        Address[]
  paymentMethods PaymentMethods[]
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
}

enum UserRole {
  user
  admin
  delivery
}

enum FavoriteTheme {
  dark
  light
}

model Address {
  id       Int         @id @default(autoincrement())
  userId   Int
  user     User        @relation(fields: [userId], references: [id])
  street   String      @db.VarChar(255)
  city     String      @db.VarChar(100)
  number   String      @db.VarChar(20)
  state    String      @db.VarChar(100)
  role     AddressRole @default(Casa)
  isActive Boolean     @default(true)
}

enum AddressRole {
  Casa
  Trabalho
  Escola
  Outros
}

model PaymentMethods {
  id        Int         @id @default(autoincrement())
  method    PaymentType
  details   Json? 
  isDefault Boolean     @default(false)
  userId    Int
  user      User        @relation(fields: [userId], references: [id])
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt

  @@map("payment_methods")
}

enum PaymentType {
  CREDIT_CARD
  DEBIT_CARD
  PIX
  PAYPAL
}

model Restaurants {
  id Int @id @default(autoincrement())
  name String @db.VarChar(50)
  category RestaurantCategory @default(OTHERS)
  local String @db.VarChar(255)
  openAt String @db.VarChar(10) @default("10:00")
  closeAt String @db.VarChar(10) @default("22:00")
  logoUrl String @db.VarChar(255)
  menu Products[]
}

enum RestaurantCategory {
  FAST_FOOD
  ITALIAN
  JAPANESE
  CHINESE
  MEXICAN
  VEGETARIAN
  PIZZA
  BURGER
  SEAFOOD
  BAKERY
  COFFEE_SHOP
  DESSERT
  OTHERS
}

model Products {
  id Int @id @default(autoincrement())
  name String @db.VarChar(255)
  category ProductCategory @default(OTHERS)
  price Decimal @db.Decimal(10, 2)
  restaurantId Int 
  restaurant Restaurants @relation(fields: [restaurantId], references: [id])
  description String @db.Text
  imageUrl String @db.Text
}

enum ProductCategory {
  BURGER
  PIZZA
  SUSHI
  SANDWICH
  DRINK
  DESSERT
  SALAD
  SOUP
  SNACK
  BREAKFAST
  VEGAN
  VEGETARIAN
  OTHERS
}
